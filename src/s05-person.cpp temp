auto Person::to_string() const -> std::string {
    std::string rNameSurname = name + " " + surname;
    return rNameSurname;
}
auto Mr::to_string() const -> std::string {
    std::string rTitleNameSurname = title + " " + name + " " + surname;
    return rTitleNameSurname;
}

