GreetingMr greeting1("Scott", "Lake");
HelloMs greeting2("Anna", "Lake");
Good_eveningKing greeting3("Alfred", "Smith");
FarewellQueen greeting4("Elizabeth", "Stone");


int main()
{
    std::cout << person1.who_is_it(person1) << std::endl;
    std::cout << person2.who_is_it(person2) << std::endl;
    std::cout << person3.who_is_it(person3) << std::endl;
    std::cout << person4.who_is_it(person4) << std::endl;
    std::cout << greeting1.greet(greeting1) << std::endl;
    std::cout << greeting2.greet(greeting2) << std::endl;
    std::cout << greeting3.greet(greeting3) << std::endl;
    std::cout << greeting4.greet(greeting4) << std::endl;
}
